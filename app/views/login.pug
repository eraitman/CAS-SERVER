extends layout

block css
  link(rel='stylesheet', href='/stylesheets/login.css')

block content
  .container
    form.form-signin(action='/login' method='post')
      h2.form-signin-heading Please sign in
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='text', name="name", placeholder='name', required='', autofocus='')
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name="phone4", placeholder='고유번호 4자리', required='')
      .checkbox
        label
          input(type='checkbox', value='remember-me')
          |  Remember me
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in